<Window x:Class="WpfApp2.TableSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="TableSelectionWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="TableList" HorizontalAlignment="Left" Width="200"/>
        <Button Content="Select Table" HorizontalAlignment="Center" Height="30" Width="150" Click="SelectTable_Click"/>
    </Grid>
</Window>
