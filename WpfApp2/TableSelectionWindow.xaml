<Window x:Class="WpfApp2.TableSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Table Selection"
        Height="450"
        Width="800"
        Background="#F3F4F6">
    <Grid Margin="10">
        <!-- Заголовок окна -->
        <TextBlock Text="Select Table" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,20"/>

        <!-- Список таблиц -->
        <ListBox x:Name="TableList" HorizontalAlignment="Left" Width="300" Margin="10"
                 BorderBrush="#0078D7" BorderThickness="1" Background="White"
                 FontSize="16" Padding="10"/>

        <!-- Кнопка для выбора таблицы -->
        <Button Content="Select Table" HorizontalAlignment="Right" VerticalAlignment="Center"
                Width="150" Height="40" Margin="10"
                Background="#0078D7" Foreground="White" FontWeight="Bold"
                Click="SelectTable_Click"/>
    </Grid>
</Window>
